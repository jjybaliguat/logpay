model Counter{
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  value Int

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  SUPERADMIN
  ADMIN
}